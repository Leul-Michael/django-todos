{
  "watch": {
    "build": {
      "patterns": [
        "base",
        "templates",
        "static/css/app.css"
      ],
      "extensions": ["html", "css"],
      "quiet": false
    }
  },
  "scripts": {
    "build": "postcss static/css/app.css -o static/css/app.min.css",
    "watch": "npm-watch"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.1"
  }
}
